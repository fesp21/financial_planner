%tr
	%td.debit
		= "-$#{debit.amount}"
		%span.delete
			= link_to "delete", debit, method: :delete, confirm: "Are you sure you want to flush this innocent goldfish down the toilet?"
	- unless defined?(hide_category)
		%td= debit.category.name if debit.category
	%td= debit.transaction_date
	%td= debit.description
