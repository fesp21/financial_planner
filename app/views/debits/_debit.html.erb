<tr>
	<td class="debit">
		-$<%= debit.amount %>
		<span class="delete">
			<%= link_to "delete", 
									debit, 
									method: :delete, 
									confirm: "Are you sure you want to flush this innocent goldfish down the toilet?" %>
		</span>
	</td>
	<% unless defined?(hide_category) %>
		<td><%= debit.category.name if debit.category %></td>
	<% end %>
	<td><%= debit.transaction_date %></td>
	<td><%= debit.description %></td>
</tr>
