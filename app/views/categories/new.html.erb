<% provide(:title, 'Add Category') %>
<h1>Add Category</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@category, :html => { :class => "form-horizontal" }) do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<div class="control-group">
				<%= f.label :name, :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :name, required: true %>
				</div>
			</div>
			
			<!-- todo: bootstrap prepend $ -->
			<div class="control-group">
				<%= f.label :budget, :class => "control-label" %>
				<div class="controls">
					<%= f.money_field :budget, required: true %>
				</div>
			</div>

			<div class="form-actions">
				<%= f.submit "Add Category", :class => "btn btn-large btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
