= bootstrap_form_for(@goal, :html => { :class => "form-horizontal" }) do |f|
	%fieldset
		
		%legend
			%span.controls Add Goal

		= render 'shared/error_messages', object: f.object

		= f.text_field :name, required: true
		
		= f.money_field :cost, required: true

		= f.number_field :rank, required: true, min: 1, step: 1

		.form-actions
			= f.submit "Add Category", :class => "btn btn-large btn-primary"
